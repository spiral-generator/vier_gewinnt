{% extends 'base.html.twig' %}

{% block title %}Auswertung{% endblock %}

{% block styles %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<style>
.centered {
    text-align: center;
}
h1 {
    font-size: 25px;
    margin: 50px auto;
}
table {
    width: 750px !important;
    margin: 0 auto;
}
button {
    cursor: pointer;
    padding: 7px;
    font: bold 17px monospace;  
    border-radius: 5px;
    border-color: black;
    
    margin-top: 30px;
}
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="centered">
        <h1>Auswertung - {{info.mode}} Gewinnt</h1>
        
        <table class="table table-striped table-bordered">
            <tr>
                <td>Sieger</td>
                <td>
                    {% if info.winner %}
                        Spieler {{info.winner}}
                    {% else %}
                        unentschieden
                    {% endif %}
                </td>
            </tr>
            <tr>
                <td># Gewinnt</td>
                <td>{{info.mode}}</td>
            </tr>
            <tr>
                <td>Spielfeldgröße</td>
                <td>{{info.cols}} x {{info.rows}}</td>
            </tr>
            <tr>
                <td>Runden</td>
                <td>{{info.turns}}</td>
            </tr>
            <tr>
                <td>Höchste Spalte</td>
                <td>{{info.highest}}</td>            
            </tr>
            <tr>
                <td>Niedrigste Spalte</td>
                <td>{{info.lowest}}</td>
            </tr>
        </table>
        
        <a href="{{reloadUrl}}">
            <button type="button">Noch mal</button>
        </a>
    </div>
</div>
{% endblock %}